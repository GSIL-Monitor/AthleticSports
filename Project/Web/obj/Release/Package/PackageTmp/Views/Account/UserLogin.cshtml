@using Web.Models
@model LoginViewModel

@{
    ViewBag.Title = "登录";
    Layout = null;
}

@using (Ajax.BeginForm("UserLogin", "Account", new { area = "", UpdateTargetId = "loginform" }, ajaxOptions: new AjaxOptions { UpdateTargetId = "loginform" }, htmlAttributes: new { @class = "form-horizontal", role = "form", id = "form4login" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="input-group input-group-lg col-md-12 col-xs-12">
        @Html.EditorFor(model => model.UserName, new { placeholder = "用户名", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
    </div>
    <div class="h_20"></div>

    <div class="input-group input-group-lg col-md-12 col-xs-12">
        @Html.EditorFor(model => model.Password, new { placeholder = "密码", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <div class="h_20"></div>
    @Html.Partial("Modal_LoginSubmit")
    <div class="h_20"></div>
}