
@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="formBox">
        <h1>用户注册</h1>
        <div class="info">注册会员，随时发布融资项目，提升项目浏览量</div>
        <form class="form-horizontal myForm">
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputEmail3" class="col-xs-4 control-label">用户昵称</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="necheng" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputPassword3" class="col-xs-4 control-label">姓　　名</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="name" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputEmail3" class="col-xs-4 control-label">密　　码</label>
                    <div class="col-xs-8">
                        <input type="password" class="form-control" id="mima" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputPassword3" class="col-xs-4 control-label">确认密码</label>
                    <div class="col-xs-8">
                        <input type="password" class="form-control" id="remima" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputEmail3" class="col-xs-4 control-label">手　　机</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="shouji" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="inputPassword3" class="col-xs-4 control-label">身份证号</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="shenfenzheng" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="youxiang" class="col-xs-4 control-label">邮　　箱</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="youxiang" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="gongsi" class="col-xs-4 control-label">公司名称</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="gongsi" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="leixing" class="col-xs-4 control-label">公司类型</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="leixing" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="ziben" class="col-xs-4 control-label">注册资本</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="ziben" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="dizhi" class="col-xs-4 control-label">注册地址</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="dizhi" placeholder="">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-sm-6">
                    <label for="shiji" class="col-xs-4 control-label">实际地址</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control" id="shiji" placeholder="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12">
                    <label for="fanwei" class="col-xs-3 col-md-2 control-label">经营范围</label>
                    <div class="col-xs-9 col-md-10">
                        <textarea id="fanwei" class="form-control" rows="4"></textarea>
                    </div>
                </div>
            </div>
            <div class="row" style="background:#fff; border-bottom:none;">
                <div class="form-group col-xs-12">
                    　　<input type="checkbox" name="xieyi" /> <label for="xieyi">我同意并遵守<a href="#" style="color:#52B232;">《用户声明》</a></label>
                </div>
            </div>
            <div class="row text-center"><input class="btn btn-lg btn-primary" style="font:bold 22px Microsoft Yahei; border-radius:6px;" value="立即注册" data-toggle="modal" data-target="#formSucc" /></div>


            <!-- Modal -->
            <div class="modal fade" id="formSucc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content text-center">
                        <div class="formSucc">上市信息提交成功！</div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

