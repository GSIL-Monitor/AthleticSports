@model Enum

@Html.EnumDropDownListFor(a => a, new { @class = "form-control" })

<script>
    $(document).ready(function () {
        $('#@Html.NameForModel()').multiselect({
            buttonClass: 'form-control',
            buttonWidth: '100%',
            includeSelectAllOption: true,
            enableCollapsibleOptGroups: true,
            maxHeight: 300
        });
    });
</script>