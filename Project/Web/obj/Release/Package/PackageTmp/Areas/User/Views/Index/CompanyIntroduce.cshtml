@using Web.Areas.User.Models
@model CompanyIndroduceEditModel

@{
    Layout = "~/Views/Shared/_LayoutForHome.cshtml";
    ViewBag.Title = "公司介绍 会员中心";
}
@if (!Request.IsAuthenticated)
{
    <script>
        window.localStorage.aa = "need2login";
        alert("此页面需登录后再访问,现在将跳转回首页。。");
        window.location.href = "/Home/Home";
    </script>
}
<div style="background:#fff;">
    <div class="container">
        <ul class="nav nav-pills col-md-offset-3 personav">
            <li role="presentation"><a href="/">首页</a></li>
            <li role="presentation"><a href="@Url.Action("Index","Index",new { area = "User" })">会员中心</a></li>
            <li role="presentation" class="active"><a href="@Url.Action("CompanyIntroduce","Index",new { area = "User" })">公司介绍</a></li>
            <li role="presentation"><a href="@Url.Action("ProductManagement","Index",new { area = "User" })">产品管理</a></li>
        </ul>
    </div>
</div>
<div class="h_20"></div>
<div class="h_20"></div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="h_20"></div>
                    <div class="ptitle">
                        <span> 公司介绍 </span>
                        @*<span class="pull-right ptitle-span"><i class="fa fa-reply" aria-hidden="true"></i>返回</span>*@
                        <div class="h_20"></div>
                    </div>
                     @using (Html.BeginForm("CompanyIntroduce", "Index", FormMethod.Post, new { role = "form", id = "form4companyInfoedit" }))
                     {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="h_20"></div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-xs-12">
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">公司名称</span>
                                        @Html.EditorFor(model => model.CompanyName, new { placeholder = "公司名称", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12">
                                    <div class="input-group hui_input">
                                        <span style="margin-left:15px;">logo</span>
                                        @Html.EditorFor(model => model.LogoUrl, new { placeholder = "", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.LogoUrl, "", new { @class = "text-danger" })
                                        @*<span class="span-margin"><img src="~/Content/images/glogo.jpg" /></span>
                                            <span class="span-margin span-border"><i class="fa fa-upload" aria-hidden="true"></i>上传</span>
                                            <span class="span-margin span-hborder">重新上传</span>*@
                                    </div>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">主营产品</span>
                                        @Html.EditorFor(model => model.MainProduct, new { placeholder = "", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MainProduct, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">中文介绍</span>
                                        @Html.TextAreaFor(model => model.ChineseIntroduction, new { rows = "4", placeholder = "", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ChineseIntroduction, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">英文介绍</span>
                                        @Html.TextAreaFor(model => model.EnglishIntroduction, new { rows = "5", placeholder = "", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.EnglishIntroduction, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="text-center hui_zmargin">
                            <input class="btn btn-md btn-success hui_button" type="button"  onclick="document.getElementById('form4companyInfoedit').submit();" value="保存" />
                        </div>
                     }
                    <div class="h_20"></div>
                    <div class="h_20"></div>

                </div>
            </div>
        </div>

    </div>

</div> 