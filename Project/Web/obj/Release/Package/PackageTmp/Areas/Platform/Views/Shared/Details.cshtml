@using System.Web.Mvc.Ajax
@using Resources
@using Web.Helpers


@{
    Layout = "../Shared/_LayoutForm.cshtml";
}
<div class="row">
    @Html.DisplayForModel()
</div>
<div class="row text-center">
    @if (Html.CheckControllerAction("Edit"))
    {
        @Ajax.ActionLink(Lang.Edit, "Edit", null, new { id = ViewContext.RouteData.Values["id"], parameter = Request["parameter"] }, new AjaxOptions { UpdateTargetId = "Main" }, new { @class = "btn btn-primary" })
    }
    @if (Html.CheckControllerAction("Delete"))
    {
        @Ajax.ActionLink(Lang.Delete, "Delete", null, new { id = ViewContext.RouteData.Values["id"], parameter = Request["parameter"] }, new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "Delete", Confirm = "您确定要删除该记录吗？该操作不可恢复！" }, new { @class = "btn btn-danger" })
    }
</div>
