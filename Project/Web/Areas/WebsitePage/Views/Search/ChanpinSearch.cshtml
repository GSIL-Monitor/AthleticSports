@using Models.WebsiteManagement;
@using Web.Helpers;

@model PagedList<Product>
@{
    ViewBag.Title = ViewBag.Type == "new" ? "泰达产品" : ViewBag.Type == "last" ? "终端产品" : "产品" + "搜索结果 聚焦泰达";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-second-top">
    <!--网站路径-->
    <div class="website-url pull-left">
        <span>当前位置</span>
        <span>首页></span>
        <span> 搜索结果</span>
    </div>
    <div class="clearfix"></div>
    <!--搜索-->
</section>
<div class="panel panel-default">
    <div class="panel-body padding30">
        <div class="search_top">
            您搜索的@(ViewBag.Type == "new" ? "泰达产品" : ViewBag.Type == "last"?"终端产品":"产品")<span>@ViewBag.Keyword</span>，共有 <span>@ViewBag.Count 条</span> 查询结果。
        </div>
        <div class="search_mian">
            @if (Model.Any())
            {
                foreach (Product item in Model)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12 search_a text-center">
                        <a href="@Url.Action("WindowProduct","Focus",new { id = item.Id, index = "focus" })">
                            <img src="@(string.IsNullOrEmpty(item.ProductImgUrl) ? "/Content/images/productbg.gif" : item.ProductImgUrl)" />
                            <p>@(item.CompanyInfo?.CompanyName) </p>
                            <p>@item.ProductName</p>
                        </a>
                    </div>
                }
            }

            <!--分页-->
            <div class="h_20"></div>
            <div class="h_20"></div>
            <nav class="text-center" aria-label="Page navigation">
           
                <ul class="pagination">
                    @Html.Raw(Html.MikePager(Model))
                        @*<li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true"> < </span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true"> > </span>
                            </a>
                        </li>*@
                    </ul>
            </nav>
        </div>
    </div>
</div>

