
@{
    Layout = "~/Views/Shared/_LayoutForHome.cshtml";
}

<div style="background:#fff;">
    <div class="container">
        <ul class="nav nav-pills col-md-offset-3 personav">
            <li role="presentation"><a href="#">个人中心</a></li>
            <li role="presentation"><a href="#">公司介绍</a></li>
            <li role="presentation" class="active"><a href="#">产品管理</a></li>
        </ul>
    </div>
</div>
<div class="h_20"></div>
<div class="h_20"></div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="h_20"></div>
                    <div class="ptitle">
                        <span> 新产品上传 </span>
                        <span class="pull-right ptitle-span"><i class="fa fa-reply" aria-hidden="true"></i>返回</span>
                        <div class="h_20"></div>
                    </div>
                    <div class="h_20"></div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        提示：*为必填项，本系统支持上传文件的格式为jpg、png、gif、jpeg、bmp
                    </div>
                    <div class="h_20"></div>
                 <div class="col-md-7 col-xs-12 col-sm-12">
                     <div class="col-xs-12 no_left">
                         <div style="position:relative;">
                             <span class="hui_xing">*</span>
                             <div class="input-group hui_input">
                                 <span class="input-group-addon">产品名称</span>
                                 <input type="text" class="form-control" placeholder="" />
                             </div>
                         </div>
                     </div>
                     <div class="col-xs-12 no_left">
                         <div class="input-group hui_input">
                             <span class="input-group-addon">产品型号</span>
                             <input type="text" class="form-control" placeholder="" />
                         </div>
                     </div>


                     <div class="col-xs-12 no_left">
                         <div style="position:relative;">
                             <span class="hui_xing">*</span>
                             <div class="input-group hui_input">
                                 <span class="input-group-addon"> 所属行业</span>
                                 <input type="text" class="form-control" aria-label="汽车行业" />
                                 <div class="input-group-btn">
                                     <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                                     <ul class="dropdown-menu dropdown-menu-right">
                                         <li><a href="#">汽车行业</a></li>
                                     </ul>
                                 </div><!-- /btn-group -->
                             </div>
                         </div>
                     </div>

                     <div class="col-xs-12 no_left">
                         <div class="input-group hui_input ">
                             <span class="input-group-addon liu_border">上传文件</span>
                             <img src="~/Content/images/chanpinbg.jpg" />
                         </div>
                     </div>

                     <div class="col-xs-12 no_left">
                         <div style="position:relative;">
                             <span class="hui_xing">*</span>
                             <div class="input-group hui_input">
                                 <span class="input-group-addon">产品介绍</span>
                                 <textarea type="text" rows="3" class="form-control" placeholder=" "></textarea>
                             </div>
                         </div>
                     </div>


                     <div class="h_20"></div>
                     <div class="text-center hui_zmargin">
                         <input class="btn btn-md btn-success hui_button" type="button" value="确认发布" />
                         <input class="btn btn-md btn-default hui_btn hui_button" type="button" value="取消" />
                     </div>
                     <div class="h_20"></div>
                     <div class="h_20"></div>
                 </div>  


                </div>
            </div>
        </div>

    </div>

</div>