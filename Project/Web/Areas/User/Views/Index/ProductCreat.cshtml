@*<div class="container">*@
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="h_20"></div>
                    <div class="ptitle">
                        <span> 新产品上传 </span>
                        <a class="pull-right ptitle-span" href="@Url.Action("ProductList")" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#@UpdateTargetId">
                            <i class="fa fa-reply" aria-hidden="true"></i>
                            返回
                        </a>
                        @*<span class="pull-right ptitle-span"><i class="fa fa-reply" aria-hidden="true"></i>返回</span>*@
                        <div class="h_20"></div>
                    </div>

                    <div class="h_20"></div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        提示：*为必填项，本系统支持上传文件的格式为jpg、png、gif、jpeg、bmp
                    </div>
                    <div class="h_20"></div>
                    <div class="col-md-7 col-xs-12 col-sm-12">
                        @using (Ajax.BeginForm("ProductCreat", null, ajaxOptions: new AjaxOptions { UpdateTargetId = @UpdateTargetId }, htmlAttributes: new { @class = "form-horizontal" }))
                        {

                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.CompanyInfoId)

                            <div class="col-xs-12 no_left">
                                <div style="position:relative;">
                                    <span class="hui_xing">*</span>
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">产品名称</span>
                                        @Html.EditorFor(model => model.ProductName, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-xs-12 no_left">
                                <div class="input-group hui_input">
                                    <span class="input-group-addon">产品型号</span>
                                    @Html.EditorFor(model => model.Version, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Version, "", new { @class = "text-danger" })
                            </div>

                            @*<div class="col-md-12 col-sm-12 col-xs-12">*@
                            <div class="col-xs-12 no_left">
                                <div style="position:relative;">
                                    <span class="hui_xing">*</span>
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon"> 所属行业</span>
                                        <input type="text" class="form-control" aria-label="@ViewBag.productownedName" value="@ViewBag.productownedName" disabled/>
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" ><span class="caret"></span></button>
                                            @*<ul class="dropdown-menu dropdown-menu-right">@ViewBag.productownedName
                                                <li><a href="#">@ViewBag.productownedName</a></li>
                                            </ul>*@
                                        </div><!-- /btn-group -->
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 no_left">
                                <div class="input-group hui_input">
                                    <span class="input-group-addon liu_border">上传文件</span>
                                    @Html.EditorFor(model => model.ProductImgUrl, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.ProductImgUrl, "", new { @class = "text-danger" })
                            </div>


                            @*<div class="col-md-12 col-xs-12 col-sm-12">*@
                            <div class="col-xs-12 no_left">
                                <div style="position:relative;">
                                    <span class="hui_xing">*</span>
                                    <div class="input-group hui_input">
                                        <span class="input-group-addon">产品介绍</span>
                                        @Html.EditorFor(model => model.Description, new { @class = "form-control", @style = "min-height:100px;padding:15px;" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @*</div>*@

                            <div class="h_20"></div>
                            <div class="text-center hui_zmargin">
                                <input class="btn btn-md btn-success hui_button" type="submit" value="确认发布" />
                                @*@Html.Action("ProductList", new { pageIndex = Request["pageIndex"],@class="btn btn-md btn-default hui_btn hui_button" })*@
                                <a class="btn btn-md hui_btn hui_button" href="@Url.Action("ProductList")" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#@UpdateTargetId">
                                    取消
                                </a>
                                @*<input class="btn btn-md btn-default hui_btn hui_button" type="button" value="取消" />*@
                            </div>

                        }
                        <div class="h_20"></div>
                        <div class="h_20"></div>

                    </div>



            </div>
        </div>

    </div>

</div>