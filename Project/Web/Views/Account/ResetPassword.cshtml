@using System.Configuration
@model Web.Models.ResetPasswordModel

@{
    ViewBag.Title = "重置密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div style="border: 1px solid #ddd; background-color: white; margin-top: 5px; padding: 40px 0">
                <div class="text-center">
                    <h4>@ConfigurationManager.AppSettings["SystemName"]</h4>
                </div>
                <div class="text-center">
                    <h4 style="color: green">重置密码</h4>
                </div>
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.ConfirmPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-10  col-xs-offset-1  col-md-6 col-md-offset-3">
                            <button type="submit" class="btn btn-lg btn-success btn-block">重置</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>